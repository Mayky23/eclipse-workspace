package JavaHelp;

import javax.swing.*;
import javax.swing.border.EmptyBorder;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class VentanaPrincipal extends JFrame {

    private static final long serialVersionUID = 1L;
    private JPanel contentPane;

    public static void main(String[] args) {
        EventQueue.invokeLater(new Runnable() {
            public void run() {
                try {
                    VentanaPrincipal frame = new VentanaPrincipal();
                    frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
    }

    public VentanaPrincipal() {
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 450, 300);

        // Contenido de la ventana principal
        contentPane = new JPanel();
        contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
        setContentPane(contentPane);
        contentPane.setLayout(new BorderLayout());

        // Menú de Ayuda
        JMenuBar menuBar = new JMenuBar();
        JMenu ayudaMenu = new JMenu("Ayuda");
        JMenuItem ayudaItem = new JMenuItem("Mostrar Ayuda");
        ayudaItem.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                mostrarAyuda();
            }
        });
        ayudaMenu.add(ayudaItem);
        menuBar.add(ayudaMenu);
        setJMenuBar(menuBar);

        // Botón para mostrar la ventana secundaria
        JButton mostrarVentanaBtn = new JButton("Mostrar Ventana Secundaria");
        mostrarVentanaBtn.setFont(new Font("Arial Black", Font.BOLD, 20));
        mostrarVentanaBtn.setBackground(UIManager.getColor("RadioButtonMenuItem.selectionBackground"));
        mostrarVentanaBtn.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                mostrarVentanaSecundaria();
            }
        });

        // Agregar el botón a la ventana principal
        contentPane.add(mostrarVentanaBtn, BorderLayout.CENTER);
    }

    private void mostrarAyuda() {
        // Aquí puedes implementar la lógica para mostrar la ayuda (JavaHelp u otras alternativas).
        // Puedes seguir el ejemplo proporcionado anteriormente.
        System.out.println("Mostrando Ayuda");
    }

    private void mostrarVentanaSecundaria() {
        // Crear la ventana secundaria
        JFrame ventanaSecundaria = new JFrame("Ventana Secundaria");
        ventanaSecundaria.setSize(300, 150);

        // Añadir un JLabel y un JTextField
        JLabel etiqueta = new JLabel("Etiqueta:");
        JTextField textField = new JTextField();

        // Configurar el diseño de la ventana secundaria
        ventanaSecundaria.getContentPane().setLayout(new FlowLayout());
        ventanaSecundaria.getContentPane().add(etiqueta);
        ventanaSecundaria.getContentPane().add(textField);

        // Hacer visible la ventana secundaria
        ventanaSecundaria.setVisible(true);
    }
}
