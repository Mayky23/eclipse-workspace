package JavaHelp;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.border.EmptyBorder;

public class VentanaSecundaria extends JFrame {

    private static final long serialVersionUID = 1L;
    private JPanel contentPane;

    public static void main(String[] args) {
        EventQueue.invokeLater(new Runnable() {
            public void run() {
                try {
                    VentanaSecundaria frame = new VentanaSecundaria();
                    frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
    }

    public VentanaSecundaria() {
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 450, 300);
        contentPane = new JPanel();
        contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

        setContentPane(contentPane);
        contentPane.setLayout(null);  // Puedes cambiar el diseño según tus necesidades

        // Añadir un JLabel
        JLabel etiquetaDescripción = new JLabel("Descripción: ");
        etiquetaDescripción.setBounds(10, 20, 80, 20);
        contentPane.add(etiquetaDescripción);

        // Añadir un JTextField
        JTextField txtBienvenido = new JTextField();
        txtBienvenido.setText("Bienvenido a la ventana de ayuda");
        txtBienvenido.setBounds(100, 20, 175, 20);
        contentPane.add(txtBienvenido);
    }
}
